<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Core/Theme.xaml" />
        <ResourceDictionary Source="/Resources/Core/Constants.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- #region General ComboBox -->

    <Style x:Key="ComboBox.Style" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComboBoxExtend}">
        <Setter Property="hc:InfoElement.ContentHeight" Value="{StaticResource Element.Size}" />
    </Style>

    <!-- #endregion -->
    
</ResourceDictionary>